@model SlavojMVC4_1.Models.LocalPasswordModel

<p>
    Nemáte místní heslo k tomuto webu. Přidejte místní
    heslo, abyste se mohli přihlásit bez externího přihlašování.
</p>

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Formulář pro nastavení hesla</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" class="t-button t-state-default" value="Nastavit heslo" />
    </fieldset>
}
